<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Teclados" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_purple_500</item>
        <item name="colorPrimaryVariant">@color/md_purple_700</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_teal_200</item>
        <item name="colorSecondaryVariant">@color/md_teal_700</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Estilos personalizado de botones -->
    <style name="BotonTeclado">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BotonTeclado.Numero">
        <item name="android:background">@drawable/ripple_boton_numero</item>
    </style>

    <style name="BotonTeclado.Movimiento">
        <item name="android:background">@drawable/ripple_boton_movimiento</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BotonTeclado.Aceptar">
        <item name="android:background">@drawable/ripple_boton_aceptar</item>
    </style>

    <style name="BotonTeclado.Borrar">
        <item name="android:background">@drawable/ripple_boton_borrar</item>
    </style>

    <!-- Estilos personalizado de edits -->
    <style name="EditTeclado">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:background">@drawable/edit_rectangulo</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- Estilos personalizado de views -->
    <style name="ViewTeclado">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">1dp</item>
    </style>

</resources>